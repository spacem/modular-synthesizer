# Editor configuration, see http://editorconfig.org
root = true

[*]
charset=utf-8
end_of_line=lf
insert_final_newline=false
trim_trailing_whitespace=true
indent_style=tab
indent_size=4

[{*.html,*.htm,*tpl.html}]
indent_style=tab
tab_width=4

[*.json]
indent_style=tab
tab_width=4

[*.css]
indent_style=tab
tab_width=4

[*.js, *.ts]
indent_style=tab
tab_width=4

[{*.hphp,*.phtml,*.module,*.php,*.php5,*.php4,*.inc}]
indent_style=tab
tab_width=4

[*.less]
indent_style=tab
indent_size=4

[*.yaml]
indent_style=space
tab_width=1


[*.md]
max_line_length = off
trim_trailing_whitespace = false
